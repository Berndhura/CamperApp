<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wichura.de.camperapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission android:name="wichura.de.camperapp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="wichura.de.camperapp.permission.C2D_MESSAGE" />

    <application
        android:name="wichura.de.camperapp.app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />


        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="wichura.de.camperapp" />
            </intent-filter>
        </receiver>

        <service
            android:name=".gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <service
            android:name=".gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>

        <service android:name=".gcm.RegistrationIntentService"
            android:exported="false">
        </service>


        <activity
            android:name=".mainactivity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="wichura.de.camperapp.ad.NewAdActivity"
            android:label="@string/title_new_add_page" />

        <activity
            android:name="wichura.de.camperapp.mainactivity.FbLoginActivity"
            android:label="@string/title_login_page" />

        <activity
            android:name="wichura.de.camperapp.ad.OpenAdActivity"
            android:label="@string/title_open_ad_page" />

        <activity
            android:name="wichura.de.camperapp.ad.MyAdsActivity"
            android:label="@string/title_open_my_ads_page" />

        <activity
            android:name="wichura.de.camperapp.mainactivity.SearchActivity"
            android:label="@string/title_search_page" />

        <activity
            android:name=".messages.MessagesActivity"
            android:label="@string/title_message_page" />

        <activity
            android:name=".messages.MessagesOverviewActivity"
            android:label="@string/title_msg_overview_page" />

        <activity
            android:name=".mainactivity.SettingsActivity"
            android:label="@string/title_settings_page" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

    </application>

</manifest>