<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp"
    android:orientation="vertical"
    android:weightSum="5">

    <ImageView
        android:id="@+id/icon"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/lks_app_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="3dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:weightSum="7" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5" >

            <ImageView
                android:id="@+id/bookmark_star"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/bockmark_star_empty"/>

            <ImageView
                android:id="@+id/NEW_my_ad_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/ic_delete_blue_grey_600_24dp" />

            <ImageView
                android:id="@+id/edit_my_article"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/ic_mode_edit_blue_grey_600_24dp" />

            <ImageView
                android:id="@+id/NEW_my_ad_bookmarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:src="@drawable/ic_bookmark_border_blue_grey_600_24dp" />

            <TextView
                android:id="@+id/number_of_bookmarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="1"
            android:padding="3dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="Title"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:padding="3dp"
            android:textStyle="bold"
            android:text="price"/>

        <TextView
            android:id="@+id/article_views"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="3sp"
            android:text="Views"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

                <TextView
                    android:id="@+id/creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:text="erstellt"/>

                <ImageView
                    android:id="@+id/new_ad_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:src="@drawable/ic_fiber_new_red_600_24dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="entfernung"/>

    </LinearLayout>

</LinearLayout>

