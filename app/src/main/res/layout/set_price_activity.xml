<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24sp"
        android:layout_marginTop="24sp"
        android:text="Von"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignStart="@+id/priceTo"
        android:text="Bis"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="235dp" />

    <EditText
        android:id="@+id/priceFrom"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/price_does_not_matter"
        app:layout_constraintLeft_toLeftOf="@+id/textView4"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/priceTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/priceFrom"
        android:layout_alignBottom="@+id/priceFrom"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="number"
        android:text="@string/price_does_not_matter"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        tools:layout_editor_absoluteY="55dp" />

</RelativeLayout>
